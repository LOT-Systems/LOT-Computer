# LOT-Computer Environment Configuration
# Copy this file to .env and fill in your values

# Application
NODE_ENV=production
PORT=3000

# Database (PostgreSQL)
DB_HOST=db
DB_PORT=5432
DB_USER=lot_user
DB_PASSWORD=your-secure-password-here
DB_NAME=lot_computer
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}

# Security
JWT_SECRET=your-jwt-secret-here
SESSION_SECRET=your-session-secret-here

# Domain Configuration
DOMAIN=your-domain.com
SSL_EMAIL=admin@your-domain.com

# Akamai/Linode Object Storage (optional)
LINODE_STORAGE_ACCESS_KEY=
LINODE_STORAGE_SECRET_KEY=
LINODE_STORAGE_CLUSTER=us-east-1
LINODE_STORAGE_BUCKET=lot-computer-assets
